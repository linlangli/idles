<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_choose_time">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_chooseLocation_recyclerView_province"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dialog_chooseLocation_recyclerView_city"
        android:layout_width="0dp"
        android:layout_height="260dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_chooseLocation_recyclerView_city"
        app:layout_constraintStart_toEndOf="@id/dialog_chooseLocation_recyclerView_province"
        app:layout_constraintTop_toTopOf="@id/dialog_chooseLocation_recyclerView_province"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="260dp"/>


    <Button
        android:id="@+id/dialog_chooseLocation_button_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/dialog_choose_time_button"
        android:text="@string/dialog_choose_location_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>