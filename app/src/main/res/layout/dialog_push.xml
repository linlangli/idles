<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_push_constrain">

    <ImageButton
        android:id="@+id/dialog_push_imageButton_pushGoods"
        android:layout_width="45dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toStartOf="@id/dialog_push_imageButton_pushWorks"
        android:src="@drawable/ic_goods"
        android:background="@android:color/transparent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/dialog_push_textView_pushGoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_push_imageButton_pushGoods"
        app:layout_constraintStart_toStartOf="@id/dialog_push_imageButton_pushGoods"
        app:layout_constraintEnd_toEndOf="@id/dialog_push_imageButton_pushGoods"
        android:text="@string/dialog_push_textView_pushGood"
        android:textSize="12sp"
        android:textColor="@color/dialog_push_textView"/>

    <ImageButton
        android:id="@+id/dialog_push_imageButton_pushWorks"
        android:layout_width="45dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/dialog_push_imageButton_pushGoods"
        app:layout_constraintStart_toEndOf="@id/dialog_push_imageButton_pushGoods"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/ic_works"
        android:background="@android:color/transparent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/dialog_push_textView_pushAffair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_push_imageButton_pushWorks"
        app:layout_constraintStart_toStartOf="@id/dialog_push_imageButton_pushWorks"
        app:layout_constraintEnd_toEndOf="@id/dialog_push_imageButton_pushWorks"
        android:text="@string/dialog_push_textView_pushTask"
        android:textSize="12sp"
        android:textColor="@color/dialog_push_textView"/>


</androidx.constraintlayout.widget.ConstraintLayout>